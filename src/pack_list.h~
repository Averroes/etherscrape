#ifndef _PACK_LIST_H
#define _PACK_LIST_H

#include <stdint.h>
#include "pcap.h"

struct pack_cap
{
    const struct pcap_pkthdr *header;
    const uint8_t *packet;
    struct pack_cap* next;
};

struct captured
{
    struct pack_cap *head;
    uint32_t len;
} packets_captured;

extern struct pack_cap*
construct_node(const struct pcap_pkthdr *, 
	       const uint8_t *,
	       struct pack_cap*);

static void
insert_node(struct pack_cap *);


#endif
